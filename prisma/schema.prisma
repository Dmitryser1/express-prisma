datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  email    String   @unique
  role     Int      @default(1) // 1 = обычный пользователь, 2 = администратор

  @@map("users")
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  publicationDate DateTime
  genres          String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("books")
}
